<header>
  <div class="header-contents">
    <div class="head-title">
      <h2><%= link_to 'TRADE APP', root_path %></h2>
    </div>
    <div class="head-contents">
      <form>
        <input type="text" name="search" class="input-search"><i class="fas fa-search-plus"></i>
      </form>
      <% if user_signed_in? %>
        <ul class="header-lists">
          <li><%= link_to 'マイページ', user_path(current_user) %></li>
          <li><%= link_to 'トレードする', new_picture_path %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        </ul>
      <% else %>
        <ul class="header-lists">
          <%= link_to 'ログイン', new_user_session_path, class: "logout" %>
          <%= link_to '新規登録', new_user_registration_path %>
        </ul>
      <% end %>
    </div>
  </div>
</header>