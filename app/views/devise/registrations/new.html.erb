<%= form_with model: @user, url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
  <div class="container">
    <div class="head">
      <h2>新規登録</h2>
    </div>
    <%= render 'devise/shared/error_messages', model: f.object %>
    <%= f.text_field :nickname, placeholder:"ニックネーム（必須）", maxlength:"40", class: "input-field" %>
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可（必須）", autofocus: true, class: "input-field" %>
    <%= f.password_field :password, placeholder:"パスワード（6文字以上の半角英数字）（必須）", class: "input-field" %>
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい（必須）", class: "input-field" %>
    <div class="form-name">
      <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"苗字（必須）(全角)", class: ", input-name-field" %>
      <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"名前（必須）(全角)", class: ", input-name-field" %>
    </div>
    <div class="form-name">
      <%= f.text_field :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"苗字（必須）（カナ）", class: ", input-name-field" %>
      <%= f.text_field :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"名前（必須）（カナ）", class: ", input-name-field" %>
    </div>
    <div class="message">Message Sent</div>
    <%= f.submit "会員登録" ,class:"button", onClick: "return confirm('会員登録してよろしいですか？');" %>
  </div>
<% end %>