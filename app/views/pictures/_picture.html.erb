
<% if user_signed_in? && picture.user_id != current_user.id  %>
  <% if current_user.liked_by?(picture.id) %>
    <i class="fas fa-heart red-heart"></i>
    <% picture.likes.each do |like| %>
      <% if like.user_id == current_user.id %>
        <%= link_to 'いいねを外す', picture_like_path(picture, like.id), method: :delete, remote: true %>(　<%= picture.likes.count %>　)
      <% end %>
    <% end %>
  <% else%>
    <i class="fas fa-heart"></i>
    <%= link_to 'いいね', picture_likes_path(picture), method: :post, remote: true %>　(　<%= picture.likes.count %>　)
  <% end %>
<% else %>
  <i class="fas fa-heart"></i>いいね　(　<%= picture.likes.count %>　)
<% end %>