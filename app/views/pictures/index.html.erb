<%= render 'shared/header' %>

<div class="wrapper">
  <div class="main-contents">
    <% @pictures.each do |picture| %>
      <%= link_to picture_path(picture) do %>
      <div class="pictures">
        <div class="piuture-image">
          <%= image_tag picture.images.first %>
        </div>
        <div class="picture-text">
          <p><%= picture.name.truncate(18, omission: '...') %></p>
        </div>
        <div class="picture-btn">
          <div class="font-btn">
            <i class="far fa-comment-alt"></i>
            <span><%= picture.comments.count %></span>
          </div>
          <div class="font-btn">
            <% if user_signed_in? && current_user.liked_by?(picture.id) %>
              <i class="fas fa-heart red-heart"></i>
            <% else %>
              <i class="fas fa-heart"></i>
            <% end %>
            <span><%= picture.likes.count %></span>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
